name: Automatic Deployment

on:
  push:
    branches:
      - main
      
concurrency:
  group: devInt
  cancel-in-progress: false

jobs:
  deploy:
    runs-on: ubuntu-latest
    timeout-minutes: 40
    steps:
      - uses: actions/checkout@v3
      - name: deployment
        run: |
          echo Starting automatic deployment
          sleep 1m
          echo ending automatic deployment
